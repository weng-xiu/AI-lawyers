<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ai.lawyers.system.mapper.lawyers.AiLegalConsultationMapper">
    
    <resultMap type="AiLegalConsultation" id="AiLegalConsultationResult">
        <result property="consultationId"    column="consultation_id"    />
        <result property="userId"           column="user_id"           />
        <result property="question"         column="question"          />
        <result property="answer"           column="answer"            />
        <result property="categoryId"       column="category_id"       />
        <result property="status"           column="status"            />
        <result property="createBy"         column="create_by"         />
        <result property="createTime"       column="create_time"       />
        <result property="updateBy"         column="update_by"         />
        <result property="updateTime"       column="update_time"       />
        <result property="remark"           column="remark"            />
    </resultMap>

    <sql id="selectAiLegalConsultationVo">
        select consultation_id, user_id, question, answer, category_id, status, create_by, create_time, update_by, update_time, remark 
        from ai_legal_consultation
    </sql>
    
    <select id="selectAiLegalConsultationList" parameterType="AiLegalConsultation" resultMap="AiLegalConsultationResult">
        <include refid="selectAiLegalConsultationVo"/>
        <where>
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="question != null  and question != ''"> and question like concat('%', #{question}, '%')</if>
            <if test="categoryId != null "> and category_id = #{categoryId}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="params.beginTime != null and params.beginTime != ''"><!-- 开始时间检索 -->
                and date_format(create_time,'%Y%m%d') &gt;= date_format(#{params.beginTime},'%Y%m%d')
            </if>
            <if test="params.endTime != null and params.endTime != ''"><!-- 结束时间检索 -->
                and date_format(create_time,'%Y%m%d') &lt;= date_format(#{params.endTime},'%Y%m%d')
            </if>
        </where>
    </select>
    
    <select id="selectAiLegalConsultationById" parameterType="Long" resultMap="AiLegalConsultationResult">
        <include refid="selectAiLegalConsultationVo"/>
        where consultation_id = #{consultationId}
    </select>
    
    <select id="selectAiLegalConsultationByUserId" parameterType="Long" resultMap="AiLegalConsultationResult">
        <include refid="selectAiLegalConsultationVo"/>
        where user_id = #{userId}
        order by create_time desc
    </select>
        
    <insert id="insertAiLegalConsultation" parameterType="AiLegalConsultation" useGeneratedKeys="true" keyProperty="consultationId">
        insert into ai_legal_consultation
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="question != null and question != ''">question,</if>
            <if test="answer != null and answer != ''">answer,</if>
            <if test="categoryId != null">category_id,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="remark != null">remark,</if>
            create_time
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="question != null and question != ''">#{question},</if>
            <if test="answer != null and answer != ''">#{answer},</if>
            <if test="categoryId != null">#{categoryId},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="remark != null">#{remark},</if>
            sysdate()
         </trim>
    </insert>

    <update id="updateAiLegalConsultation" parameterType="AiLegalConsultation">
        update ai_legal_consultation
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="question != null and question != ''">question = #{question},</if>
            <if test="answer != null and answer != ''">answer = #{answer},</if>
            <if test="categoryId != null">category_id = #{categoryId},</if>
            <if test="status != null">status = #{status},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="remark != null">remark = #{remark},</if>
            update_time = sysdate()
        </trim>
        where consultation_id = #{consultationId}
    </update>

    <delete id="deleteAiLegalConsultationById" parameterType="Long">
        delete from ai_legal_consultation where consultation_id = #{consultationId}
    </delete>

    <delete id="deleteAiLegalConsultationByIds" parameterType="String">
        delete from ai_legal_consultation where consultation_id in 
        <foreach item="consultationId" collection="array" open="(" separator="," close=")">
            #{consultationId}
        </foreach>
    </delete>
</mapper>