<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ai.lawyers.system.mapper.lawyers.AiLegalKnowledgeMapper">
    
    <resultMap type="AiLegalKnowledge" id="AiLegalKnowledgeResult">
        <result property="knowledgeId"      column="knowledge_id"      />
        <result property="title"           column="title"            />
        <result property="content"         column="content"          />
        <result property="categoryId"      column="category_id"      />
        <result property="keywords"        column="keywords"         />
        <result property="viewCount"       column="view_count"       />
        <result property="status"           column="status"           />
        <result property="createBy"         column="create_by"        />
        <result property="createTime"       column="create_time"      />
        <result property="updateBy"         column="update_by"        />
        <result property="updateTime"       column="update_time"      />
        <result property="remark"           column="remark"           />
    </resultMap>

    <sql id="selectAiLegalKnowledgeVo">
        select knowledge_id, title, content, category_id, keywords, view_count, status, create_by, create_time, update_by, update_time, remark 
        from ai_legal_knowledge
    </sql>
    
    <select id="selectAiLegalKnowledgeList" parameterType="AiLegalKnowledge" resultMap="AiLegalKnowledgeResult">
        <include refid="selectAiLegalKnowledgeVo"/>
        <where>
            <if test="title != null  and title != ''"> and title like concat('%', #{title}, '%')</if>
            <if test="categoryId != null "> and category_id = #{categoryId}</if>
            <if test="keywords != null  and keywords != ''"> and keywords like concat('%', #{keywords}, '%')</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="params.beginTime != null and params.beginTime != ''"><!-- 开始时间检索 -->
                and date_format(create_time,'%Y%m%d') &gt;= date_format(#{params.beginTime},'%Y%m%d')
            </if>
            <if test="params.endTime != null and params.endTime != ''"><!-- 结束时间检索 -->
                and date_format(create_time,'%Y%m%d') &lt;= date_format(#{params.endTime},'%Y%m%d')
            </if>
        </where>
    </select>
    
    <select id="selectAiLegalKnowledgeById" parameterType="Long" resultMap="AiLegalKnowledgeResult">
        <include refid="selectAiLegalKnowledgeVo"/>
        where knowledge_id = #{knowledgeId}
    </select>
    
    <select id="selectAiLegalKnowledgeByCategoryId" parameterType="Long" resultMap="AiLegalKnowledgeResult">
        <include refid="selectAiLegalKnowledgeVo"/>
        where category_id = #{categoryId}
        order by view_count desc
    </select>
    
    <select id="searchAiLegalKnowledge" parameterType="String" resultMap="AiLegalKnowledgeResult">
        <include refid="selectAiLegalKnowledgeVo"/>
        where status = '0'
        and (title like concat('%', #{keyword}, '%') or keywords like concat('%', #{keyword}, '%') or content like concat('%', #{keyword}, '%'))
        order by view_count desc
    </select>
        
    <insert id="insertAiLegalKnowledge" parameterType="AiLegalKnowledge" useGeneratedKeys="true" keyProperty="knowledgeId">
        insert into ai_legal_knowledge
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">title,</if>
            <if test="content != null and content != ''">content,</if>
            <if test="categoryId != null">category_id,</if>
            <if test="keywords != null and keywords != ''">keywords,</if>
            <if test="viewCount != null">view_count,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="remark != null">remark,</if>
            create_time
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">#{title},</if>
            <if test="content != null and content != ''">#{content},</if>
            <if test="categoryId != null">#{categoryId},</if>
            <if test="keywords != null and keywords != ''">#{keywords},</if>
            <if test="viewCount != null">#{viewCount},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="remark != null">#{remark},</if>
            sysdate()
         </trim>
    </insert>

    <update id="updateAiLegalKnowledge" parameterType="AiLegalKnowledge">
        update ai_legal_knowledge
        <trim prefix="SET" suffixOverrides=",">
            <if test="title != null and title != ''">title = #{title},</if>
            <if test="content != null and content != ''">content = #{content},</if>
            <if test="categoryId != null">category_id = #{categoryId},</if>
            <if test="keywords != null and keywords != ''">keywords = #{keywords},</if>
            <if test="viewCount != null">view_count = #{viewCount},</if>
            <if test="status != null">status = #{status},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="remark != null">remark = #{remark},</if>
            update_time = sysdate()
        </trim>
        where knowledge_id = #{knowledgeId}
    </update>

    <delete id="deleteAiLegalKnowledgeById" parameterType="Long">
        delete from ai_legal_knowledge where knowledge_id = #{knowledgeId}
    </delete>

    <delete id="deleteAiLegalKnowledgeByIds" parameterType="String">
        delete from ai_legal_knowledge where knowledge_id in 
        <foreach item="knowledgeId" collection="array" open="(" separator="," close=")">
            #{knowledgeId}
        </foreach>
    </delete>
</mapper>