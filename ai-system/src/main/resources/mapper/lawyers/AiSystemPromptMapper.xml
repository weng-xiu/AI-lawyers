<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ai.lawyers.system.mapper.lawyers.AiSystemPromptMapper">
    
    <resultMap type="AiSystemPrompt" id="AiSystemPromptResult">
        <result property="promptId"    column="prompt_id"    />
        <result property="promptName"    column="prompt_name"    />
        <result property="promptType"    column="prompt_type"    />
        <result property="sceneType"    column="scene_type"    />
        <result property="content"    column="content"    />
        <result property="variables"    column="variables"    />
        <result property="isDefault"    column="is_default"    />
        <result property="status"    column="status"    />
        <result property="remark"    column="remark"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectAiSystemPromptVo">
        select prompt_id, prompt_name, prompt_type, scene_type, content, variables, is_default, status, remark, create_by, create_time, update_by, update_time from ai_system_prompt
    </sql>

    <select id="selectAiSystemPromptList" parameterType="AiSystemPrompt" resultMap="AiSystemPromptResult">
        <include refid="selectAiSystemPromptVo"/>
        <where>  
            <if test="promptName != null  and promptName != ''"> and prompt_name like concat('%', #{promptName}, '%')</if>
            <if test="promptType != null  and promptType != ''"> and prompt_type = #{promptType}</if>
            <if test="sceneType != null  and sceneType != ''"> and scene_type = #{sceneType}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="isDefault != null  and isDefault != ''"> and is_default = #{isDefault}</if>
        </where>
        order by is_default desc, create_time desc
    </select>
    
    <select id="selectAiSystemPromptByPromptId" parameterType="Long" resultMap="AiSystemPromptResult">
        <include refid="selectAiSystemPromptVo"/>
        where prompt_id = #{promptId}
    </select>

    <select id="selectDefaultAiSystemPrompt" resultMap="AiSystemPromptResult">
        <include refid="selectAiSystemPromptVo"/>
        where status = '0' and is_default = '1'
        <if test="promptType != null and promptType != ''">
            and prompt_type = #{promptType}
        </if>
        <if test="sceneType != null and sceneType != ''">
            and scene_type = #{sceneType}
        </if>
        limit 1
    </select>
        
    <insert id="insertAiSystemPrompt" parameterType="AiSystemPrompt" useGeneratedKeys="true" keyProperty="promptId">
        insert into ai_system_prompt
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="promptName != null and promptName != ''">prompt_name,</if>
            <if test="promptType != null and promptType != ''">prompt_type,</if>
            <if test="sceneType != null">scene_type,</if>
            <if test="content != null and content != ''">content,</if>
            <if test="variables != null">variables,</if>
            <if test="isDefault != null and isDefault != ''">is_default,</if>
            <if test="status != null">status,</if>
            <if test="remark != null">remark,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="promptName != null and promptName != ''">#{promptName},</if>
            <if test="promptType != null and promptType != ''">#{promptType},</if>
            <if test="sceneType != null">#{sceneType},</if>
            <if test="content != null and content != ''">#{content},</if>
            <if test="variables != null">#{variables},</if>
            <if test="isDefault != null and isDefault != ''">#{isDefault},</if>
            <if test="status != null">#{status},</if>
            <if test="remark != null">#{remark},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateAiSystemPrompt" parameterType="AiSystemPrompt">
        update ai_system_prompt
        <trim prefix="SET" suffixOverrides=",">
            <if test="promptName != null and promptName != ''">prompt_name = #{promptName},</if>
            <if test="promptType != null and promptType != ''">prompt_type = #{promptType},</if>
            <if test="sceneType != null">scene_type = #{sceneType},</if>
            <if test="content != null and content != ''">content = #{content},</if>
            <if test="variables != null">variables = #{variables},</if>
            <if test="isDefault != null and isDefault != ''">is_default = #{isDefault},</if>
            <if test="status != null">status = #{status},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where prompt_id = #{promptId}
    </update>

    <update id="updateDefaultPrompt" parameterType="Long">
        update ai_system_prompt set is_default = case when prompt_id = #{promptId} then '1' else '0' end
    </update>

    <delete id="deleteAiSystemPromptByPromptId" parameterType="Long">
        delete from ai_system_prompt where prompt_id = #{promptId}
    </delete>

    <delete id="deleteAiSystemPromptByPromptIds" parameterType="String">
        delete from ai_system_prompt where prompt_id in 
        <foreach item="promptId" collection="array" open="(" separator="," close=")">
            #{promptId}
        </foreach>
    </delete>
</mapper>